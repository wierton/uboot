/dts-v1/;

/ {
	#address-cells = <0x1>;
	#size-cells = <0x1>;
	compatible = "noop";
	model = "uart0";

	chosen {
	  stdout-path = "serial:115200ns";
	};

	aliases {
	  serial = &njuoop_uartlite;
	  console = &njuoop_uartlite;
	  spi = &njuoop_spi;
	};

	/*
	chosen {
		bootargs = "console=ttyPS0,115200 earlyprintk root=/dev/mmcblk0p2 rootfstype=ext4 mem=512M rootwait";
		stdout-path = "serial0:115200ns";
	};
	*/

	memory {
		device_type = "memory";
		/* ddr start at 256M and size 256M */
		reg = <0x1000000 0x20000000>;
	};

	njuoop_uartlite: serial@bfd03000 {
	  device_type = "serial";
	  compatible = "njuoop_uartlite";
	  /* unmapped uncached memory start at 0xA0000000 */
	  reg = <0xbfd03000 0x1000>;
	  reg-shift = <2>;
	};

	njuoop_spi: spi@bfd04000 {
        #address-cells = <1>;
        #size-cells = <0>;
		compatible = "xlnx,xps-spi-2.00.a";
		reg = <0x1e000000 0x1000>;
		fifo-size = <256>;
		xlnx,spi-mode = <2>; //quad spi mode

        spi-flash@0 {
            compatible = "jedec,spi-nor";
            reg = <0>; /* Chip select 0 */
            spi-max-frequency = <30000000>;
        };
	};
};
