/dts-v1/;

/ {
	#address-cells = <0x1>;
	#size-cells = <0x1>;
	compatible = "noop";
	model = "uart0";

	aliases {
	  serial = &njuoop_uartlite;
	  console = &njuoop_uartlite;
	};

	/*
	chosen {
		bootargs = "console=ttyPS0,115200 earlyprintk root=/dev/mmcblk0p2 rootfstype=ext4 mem=512M rootwait";
		stdout-path = "serial0:115200ns";
	};
	*/

	memory {
		device_type = "memory";
		/* ddr start at 256M and size 256M */
		reg = <0x1000000 0x20000000>;
	};

	njuoop_uartlite: serial@bfd03000 {
	  device_type = "serial";
	  compatible = "njuoop_uartlite";
	  /* unmapped uncached memory start at 0xA0000000 */
	  reg = <0xbfd03000 0x1000>;
	  reg-shift = <2>;
	};
};
